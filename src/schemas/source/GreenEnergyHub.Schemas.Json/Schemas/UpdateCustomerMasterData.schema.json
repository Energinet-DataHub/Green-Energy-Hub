{
  "$id": "https://github.com/Energinet-DataHub/green-energy-hub/schemas/update-customer-master-data",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Update customer master data",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "MktActivityRecord": {
      "type": "object",
      "properties": {
        "ReferenceTransaction": {
          "title": "Business Transaction Reference",
          "description": "Reference to original transaction which prompted update of customer master data",
          "$ref": "https://github.com/Energinet-DataHub/green-energy-hub/schemas#/definitions/referenceId"
        },
        "StartDate": {
          "title": "Start of occurrence",
          "description": "Date in UTC that defines the date when a new energysupplier is responsible for the meteringpoint",
          "$ref": "https://github.com/Energinet-DataHub/green-energy-hub/schemas#/definitions/utc_date"
        },
        "BusinessTransaction": {
          "$ref": "https://github.com/Energinet-DataHub/green-energy-hub/schemas#/definitions/referenceId"
        },
        "ServiceCategory": {
          "$ref": "https://github.com/Energinet-DataHub/green-energy-hub/schemas#/definitions/ServiceCategory"
        },
        "ElectricalHeating_DateAndOrTime": {
          "$ref": "https://github.com/Energinet-DataHub/green-energy-hub/schemas#/definitions/DateAndOrTime"
        },
        "ContactAddress": {
          "type": "array",
          "$ref": "https://github.com/Energinet-DataHub/green-energy-hub/schemas#/definitions/ContactAddress"
        },
        "FirstConsumerParty": {
          "$ref": "https://github.com/Energinet-DataHub/green-energy-hub/schemas#/definitions/marketParticipant"
        },
        "SecondConsumerParty": {
          "$ref": "https://github.com/Energinet-DataHub/green-energy-hub/schemas#/definitions/marketParticipant"
        },
        "MarketEvaluationPoint": {
          "$ref": "https://github.com/Energinet-DataHub/green-energy-hub/schemas#/definitions/marketEvaluationPoint"
        }
      },
      "required": [
        "OriginalTransaction",
        "FirstConsumerParty",
        "MarketEvaluationPoint",
        "StartDate",
        "BusinessTransaction"
      ]
    }
  },
  "required": [
    "MktActivityRecord"
  ]
}