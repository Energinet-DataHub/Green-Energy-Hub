{
	"name": "Spark Dev",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			// "spark_version": "3.0.1",
			// "hadoop_version": "2.7",
			// "spark_checksum": "F4A10BAEC5B8FF1841F10651CAC2C4AA39C162D3029CA180A9749149E6060805B5B5DDF9287B4AA321434810172F8CC0534943AC005531BB48B6622FBE228DDC",
			// "openjdk_version": "8",
			// "py4j_version": "0.10.9"
		}
	},

	// Set *default* container specific settings.json values on container create.
	"settings": { 
		"terminal.integrated.shell.linux": "/bin/bash"
	},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-python.python",
		"littlefoxteam.vscode-python-test-adapter",
		"hbenl.vscode-test-explorer"
	],

	"containerEnv": {
		"GRANT_SUDO": "yes"
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		4041, 4042, 4043, 4044, 8888
	],

	"overrideCommand": false,

	"containerUser": "root",
	"postCreateCommand": "sudo ln -s `(realpath .devcontainer/spark-defaults.conf)` $SPARK_HOME/conf/spark-defaults.conf",

	"remoteUser": "jovyan"
}